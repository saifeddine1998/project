<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true"
            android:paddingLeft="15dp"
            android:layout_marginBottom="8dp"/>

        <!-- Paragraph -->

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/paragraphTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a paragraph of text that describes something interesting."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@+id/titleTextView"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the example To use :"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:id="@+id/exmaple"
            android:layout_below="@+id/paragraphTextView"/>

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/codeWebView"
            android:textColor="#d62a57"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/exmaple"
            android:background="@color/black"/>

        <WebView
            android:padding="20dp"
            android:layout_below="@+id/codeWebView"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:id="@+id/videoyout"/>



        <Button
            android:id="@+id/quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/videoyout"
            android:layout_centerHorizontal="true"
            android:text="Take a quizz" />

        <Button
            android:layout_below="@+id/quiz"
            android:id="@+id/goback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_centerHorizontal="true"
            android:text="Go To Admin Panel" />

    </RelativeLayout>
</ScrollView>
